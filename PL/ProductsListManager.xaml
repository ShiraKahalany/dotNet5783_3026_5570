<Page x:Class="PL.ProductsListManager"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:PL"
	  mc:Ignorable="d" 
	  d:DesignHeight="450" d:DesignWidth="800"
	  Title="ProductsListManager">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Background="#fffff0f5">
        <Label Grid.Column="1" Content="Category:" Foreground="#FF480344" FontSize="14" FontFamily="Candara Light" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <ComboBox x:Name="AttributeSelector" SelectionChanged="AttributeSelector_SelectionChanged" Height="23" />
        </StackPanel>
            <ListView Grid.Row="0" Name="ProductListView"  MouseDoubleClick="ProductListView_MouseDoubleClick" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="10" Margin="0,0,5,0" Grid.RowSpan="1"/>
    </Grid>
</Page>
