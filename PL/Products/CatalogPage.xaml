        </ListView>-->

        <ListView x:Name="listCatalog" MouseDoubleClick="ProductDetails_MouseDoubleClick"
                  ItemsSource="{Binding}" Margin="21,0,0,0">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), 
                              RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"
                              ItemWidth="{Binding (ListView.View).ItemWidth,
                              RelativeSource={RelativeSource AncestorType=ListView}}"
                              MinWidth="{Binding ItemWidth, RelativeSource={RelativeSource Self}}"
                              ItemHeight="{Binding (ListView.View).ItemHeight, 
                              RelativeSource={RelativeSource AncestorType=ListView}}"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Height="240" Width="230">
                        <Image Source="{Binding Path}" Width="180"  Height="180"></Image>
                        <TextBlock Text="{Binding Name}" FontSize="20"></TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="$" FontSize="20"></TextBlock>
                            <TextBlock Text="{Binding Price}" FontSize="20"></TextBlock>
                            <Button 
                            Click="AddTocart_Click" 
                                Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}" 
                                Height="30" Width="30"
                                HorizontalAlignment="Right"
                                Margin="100,0,0,0"
                                
                                >

                                <materialDesign:PackIcon Name="pack" Tag="{Binding ID}" Kind="CartAdd" 
                                         Foreground="Black"
                                         Height="25" Width="25"
                                         VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                        

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
