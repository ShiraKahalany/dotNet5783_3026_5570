<Page x:Class="PL.Products.ProductDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:PL.Products"
      mc:Ignorable="d" 
              TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductDetails">

    <Page.Resources>
        <Style x:Key="Design" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25,25,25,25"/>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Image HorizontalAlignment="Left" 
               Height="268" Margin="500,58,0,0" 
               VerticalAlignment="Top" Width="224" Source="{Binding Path}" />

        <TextBlock 
            Name="nameofproduct"
            HorizontalAlignment="Left"
            FontFamily="Candara" 
            FontWeight="Bold"
            Foreground="gray"
            FontSize="25" 
            Margin="44,26,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding Name}" 
            VerticalAlignment="Top" 
            Height="50"
            Width="285"/>
        <TextBlock 
            Name="priceofproduct"
            IsEnabled="false"
            HorizontalAlignment="Left"
            FontSize="25"
            Margin="44,86,0,0"
            TextWrapping="Wrap"
            Text="{Binding Price}" VerticalAlignment="Top" Height="41" Width="89"/>
        <TextBlock
            Name="categoryofproduct"
             IsEnabled="false"
            HorizontalAlignment="Left"
            FontSize="25"  TextWrapping="Wrap"
            Text="{Binding Category}" VerticalAlignment="Top" Height="48" Width="196" Margin="44,132,0,0"/>
        <TextBlock
            Name="idofproduct"
             IsEnabled="false"
            HorizontalAlignment="Left" 
            FontSize="25"  
            TextWrapping="Wrap" 
            Text="{Binding ID}" VerticalAlignment="Top" Height="42" Width="89" Margin="44,282,0,0" RenderTransformOrigin="0.505,2.133"/>
        <Button  Name="addTocart"
                 Click="AddTocart_Click"
                Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}" 
                HorizontalAlignment="Left"
                Margin="237,254,0,0"
                VerticalAlignment="Top" Height="49" Width="50">
            <materialDesign:PackIcon Kind="Plus" 
                                         Foreground="Black"
                                         Height="30" Width="30"/>

        </Button>
        <ComboBox  Name="AmountOfProduct" HorizontalAlignment="Left" Margin="44,225,0,0" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="back" HorizontalAlignment="Left" Margin="0,342,0,0" VerticalAlignment="Top" Click="back_click" Background="{x:Null}" BorderBrush="{x:Null}" Width="58">
            <materialDesign:PackIcon Kind="ArrowBack"
                                         Foreground="Black"
                                         Height="30" Width="30" RenderTransformOrigin="0.5,0.5">
                <materialDesign:PackIcon.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </materialDesign:PackIcon.RenderTransform>
            </materialDesign:PackIcon>
        </Button>

    </Grid>
</Page>
