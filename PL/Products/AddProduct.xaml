        <TextBox Name="InsertAmount" HorizontalAlignment="Left" Margin="601,234,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40" Height="27" RenderTransformOrigin="2.818,0.141"/>
        <ComboBox Name ="SelectCategory" HorizontalAlignment="Left" Margin="502,290,0,0" VerticalAlignment="Top" Width="139" Height="27" />
