<Window x:Class="PL.Product_Manager_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Product_Manager_Window" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="Design" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25,25,25,25"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation = "Horizontal" Height="51" VerticalAlignment="Top">
            <Button Content = "רשימת המוצרים" Style="{DynamicResource Design}" MinWidth="150" Margin="10,0,0,0" Click="Button_Click_List" BorderBrush="{x:Null}"/>
            <Button Content = "ארכיון מוצרים" Style="{DynamicResource Design}" MinWidth="150" Margin="10,0,0,0" Click="Button_Click_DeletedList"/>
            <Button Content = "הוספת מוצר חדש" Style="{DynamicResource Design}" MinWidth="150" Margin="10,0,0,0" />
        </StackPanel>
        <Frame x:Name="Products_Manager" Margin="0,35,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
