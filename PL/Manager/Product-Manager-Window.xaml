<Window x:Class="PL.Product_Manager_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Product_Manager_Window" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation = "Horizontal" Height="35" VerticalAlignment="Top">
            <Button Content = "רשימת המוצרים" MinWidth="150" Margin="10,0,0,0" Click="Button_Click_List"/>
            <Button Content = "ארכיון מוצרים" MinWidth="150" Margin="10,0,0,0" Click="Button_Click_DeletedList"/>
            <Button Content = "הוספת מוצר חדש" MinWidth="150" Margin="10,0,0,0" />
        </StackPanel>
        <Frame x:Name="Products_Manager" Margin="0,35,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
