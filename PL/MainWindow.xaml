<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">



    <Window.Resources>
        <Style x:Key="Design" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25,25,25,25"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="353*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="11*"/>

        </Grid.RowDefinitions>
        <Image Source="/home.jpg" RenderTransformOrigin="0.841,0.493" Height="535" VerticalAlignment="Top" Margin="-34,0,-34,0" Grid.ColumnSpan="2" Grid.RowSpan="4"/>
        <StackPanel Orientation="Horizontal" Background="#F0F0F0" Height="35" Grid.ColumnSpan="2">

            <Button x:Name="Connection" Content="התחברות" Height="26" Width="81" Click="Connection_Click" Margin="10,0,0,0"/>
            <Button  Height="37" Width="39" Margin="10,0,0,0" >
                <Image Source="/order.png" Height="32" Width="32" />
            </Button>
            <Button x:Name="Categories"
                    Margin="600,0,0,0" 
                    Width="41" 
                    VerticalAlignment="Bottom" 
                    BorderBrush="{x:Null}" 
                    Height="35" 
                    MouseEnter="showCategory" 
                    
                    Click="Categories_Click" >
                <Button.Background>
                    <ImageBrush ImageSource="/menu.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <ListView Name="ListCategories"
                  HorizontalAlignment="Right"
                  MouseMove="showCategory"
                  MouseLeave="hideCategory" Margin="0,43,0,105" Grid.RowSpan="2" Grid.Column="1">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListViewItem>
                <Button Name="All"
                         Width="60"
                         Height="30"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>
                        <Image 
                            Source="/menu.png"
                            Width="60"
                            Height="30"/>
                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Bottles"
                        Width="60"
                            Height="30"
                        Padding="0"
                         Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Diapers"
                        Width="60"
                            Height="30"
                        Padding="0"
                         Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Clothes"
                        Width="60"
                            Height="30"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Carts"
                        Width="60"
                            Height="30"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Toys"
                        Width="60"
                          Height="30"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
        </ListView>




    </Grid>
</Window>
