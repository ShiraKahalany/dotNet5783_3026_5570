<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">



    <Window.Resources>
        <Style x:Key="Design" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25,25,25,25"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>

        </Grid.RowDefinitions>
        <Image Source="/Gray-interior-design_Photographee.eu_Shutterstock-scaled.jpg" Grid.Row="1" RenderTransformOrigin="0.841,0.493" Height="535" VerticalAlignment="Top" Margin="-32,-101,-37,0" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <StackPanel Orientation="Horizontal" Background="#F0F0F0" Height="35" Grid.ColumnSpan="2" Margin="-2,-2,-2,10" >
            <Button x:Name ="showProducts" Content="רשימת המוצרים"  BorderBrush="White" Foreground="Black" FontStyle="Normal"   Background="WhiteSmoke" FontSize="20" Click="showProducts_Click" Height="41" Width="169"/>

            <Button  Height="37" Width="39" Margin="10,0,0,0" >
                <Image Source="/order.png" Height="32" Width="32" >
                </Image>
            </Button>
            <Button x:Name="Connection" Content="התחברות" Height="22" Width="75" Click="Connection_Click"/>

        </StackPanel>



    </Grid>
</Window>
