<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">



    <Window.Resources>
        <Style x:Key="Design" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25,25,25,25"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="353*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="11*"/>

        </Grid.RowDefinitions>
        <Image Source="/Gray-interior-design_Photographee.eu_Shutterstock-scaled.jpg" RenderTransformOrigin="0.841,0.493" Height="539" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.RowSpan="4" HorizontalAlignment="Left" Width="888" Margin="0,-28,0,0"/>
        <StackPanel Orientation="Horizontal" Background="#F0F0F0" Grid.ColumnSpan="3" Margin="0,0,0,4">

            <Button 
                x:Name="Connection"
                Content="LogIn"
                Height="28" 
                Width="101" 
                Click="Connection_Click"
                Margin="10,0,0,0"
                />
            <Button x:Name="Categories"
                    Margin="600,0,0,0" 
                    Width="41" 
                    VerticalAlignment="Bottom" 
                    Height="35" 
                    MouseEnter="showCategory" 
                    
                    Click="Categories_Click" >

                <Button.Background>
                    <ImageBrush ImageSource="/menu.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <ListView Name="ListCategories"
                  HorizontalAlignment="Right"
                  MouseMove="showCategory"
                  MouseLeave="hideCategory"
                  Margin="0,43,0,10" 
                  Grid.RowSpan="3"
                  Grid.Column="1" Grid.ColumnSpan="2" Width="662">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"  HorizontalAlignment="Right" Margin="5"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListViewItem>
                <Button Name="All"
                        Width="80"
                        Height="80"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Bottles"
                        Width="80"
                        Height="80"
                        Padding="0"
                         Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Diapers"
                       Width="80"
                        Height="80"
                        Padding="0"
                         Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Clothes"
                        Width="80"
                        Height="80"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Carts"
                        Width="80"
                        Height="80"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="Toys"
                        Width="80"
                        Height="80"
                        Padding="0"
                        Click="ListCategories_Click">
                    <StackPanel>

                    </StackPanel>
                </Button>
            </ListViewItem>
        </ListView>
       


    </Grid>
</Window>
