<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converter ="clr-namespace:PLConverter"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Window.Resources>
        <converter:IntToStringPhoneConverter x:Key="categoryToStringConverter"/>
        <Style x:Key="Design" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25,25,25,25"/>
                </Style>
            </Style.Resources>
        </Style>

    </Window.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="69*"/>
        </Grid.ColumnDefinitions>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Image Source="/living room background.jpg"  RenderTransformOrigin="0.841,0.493" Height="451" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Left" Width="792" Margin="2,0,0,0"/>
        <!--<StackPanel Orientation="Horizontal" Width="800" Background="#F0F0F0" Grid.ColumnSpan="3" Margin="0,0,0,4">-->
        <Button x:Name="Categories" 
                    Height="35" 
                    MouseEnter="showCategory" 
                   
                    Click="Categories_Click" Margin="10,4,468,4" >

            <Button.Background>
                <ImageBrush ImageSource="/menu.png"/>
            </Button.Background>
        </Button>
        <Button  x:Name="CartButton"
            Content="Cart" RenderTransformOrigin="1.046,0.262"
            Width="100"
            Height="35"
            Grid.Row="0"
                 
            HorizontalAlignment="Left" Margin="48,4,0,4" Click="CartButton_Click" Grid.Column="1"
                    />
        <Button 
            x:Name="Connection"
            Content="LogIn" 
            Click="Connection_Click" 

            RenderTransformOrigin="1.046,0.262"
            Width="100"
            Height="35"
            Grid.Row="0"
            
            HorizontalAlignment="Left" Margin="166,4,0,4" Grid.Column="1"
                />

        <ListView Name="ListCategories"
                  HorizontalAlignment="Left"
                  MouseMove="showCategory"
                  MouseLeave="hideCategory"
                  
                  Margin="0,35,0,18" 
                  Grid.RowSpan="2" Grid.ColumnSpan="2" Width="800">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="5"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListViewItem>
                <Button Name="kitchen"
                        Width="112"
                        Height="143"
                        Padding="0" 
                        Content="Kitchen" 
                        VerticalAlignment="Bottom"
                        Click="ListCategories_Click"
                        >
                    

                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="living_room"
                        Width="112"
                        Height="143"
                        Padding="0"
                        VerticalAlignment="Bottom"
                        Click="ListCategories_Click"
                        Content="Living Room"
                        >
                    


                    <!--<StackPanel>

                    </StackPanel>-->
                </Button>
            </ListViewItem>
            <ListViewItem Selected="ListViewItem_Selected">
                <Button Name="bed_room"
                        Width="112"
                        Height="143"
                        Padding="0"
                        Content="Bed Room"
                        Click="ListCategories_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/bed room.jpg"/>
                    </Button.Background>

                    <!--<StackPanel>

                    </StackPanel>-->
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="bath_room"
                        Width="112"
                        Height="143"
                        Padding="0"
                        Content="Bath Room"
                        Click="ListCategories_Click">
                    

                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="garden"
                         Width="112"
                        Height="143"
                        Padding="0"
                        Content="Garden"
                        Click="ListCategories_Click">
                    

                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Name="all"
                         Width="112"
                        Height="143"
                        Padding="0"
                        Content="All Products"
                        Click="ListCategories_Click">

                </Button>
            </ListViewItem>
        </ListView>

        <Frame x:Name="Catalog" Margin="0,35,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2"  />
    </Grid>
</Window>
