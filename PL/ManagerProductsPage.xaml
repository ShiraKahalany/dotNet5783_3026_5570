<Page x:Class="PL.ManagerProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerProductsPage">

    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Frame Grid.Column="0" VerticalAlignment="Stretch" Name="ManagerProductsFrame" NavigationUIVisibility="Hidden" Background="PaleGoldenrod"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Stretch" Background="Azure">
            <Button Name="AddProduct" Content="New" HorizontalAlignment="Left" Foreground="#FFFBFBFC" FontWeight="Bold" FontSize="18" BorderBrush="{x:Null}" Height="57" Background="#FF1B6365" Click="AddProduct_Click" Width="73"/>
            <Button Name="ShowDeletedProducts" Content="Archive" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF0B5650" BorderBrush="{x:Null}" Foreground="#FFFFFEFE" FontWeight="Bold" Height="56" Width="75" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>
