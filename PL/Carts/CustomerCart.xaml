<Page x:Class="PL.Carts.CustomerCart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Carts"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerCart">
    <Page.Resources>
        <Style x:Key="Design" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25,25,25,25"/>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="AntiqueWhite">
            <Label Content="My Cart" Background="AntiqueWhite" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Width="800" FontSize="30" HorizontalContentAlignment="Center" FontFamily="Snap ITC" FontWeight="Bold" Foreground="#FF974E4E"/>
        </Grid>
        <Grid Grid.Row="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.8*" />
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="1"
                   Content="Total Price"
                   HorizontalAlignment="Center"
                   HorizontalContentAlignment="Center"
                   FontSize="20"
                   Margin="0,30,0,10"
                    FontFamily="Snap ITC"
                    FontWeight="Bold"
                    Foreground="#FF974E4E" />

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">

                <TextBlock Name="totalPrice" Grid.Column="1" Text="{Binding}"
                       HorizontalAlignment="Center"
                   FontSize="30"
                   Margin="0,69,0,10"
                    FontFamily="Snap ITC"
                    FontWeight="Bold"
                    Foreground="Black" />
                <TextBlock Grid.Column="1" Text=" $}"
                       HorizontalAlignment="Center"
                   FontSize="30"
                   Margin="0,69,0,10"
                    FontFamily="Snap ITC"
                    FontWeight="Bold"
                    Foreground="Black" />
            </StackPanel>
            <Button Grid.Column="1"
                    Name="OrderConfirmation"
                    Content="CHECKOUT"
                    Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}"
                    Background="AntiqueWhite"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Height="50" Width="800"
                    FontSize="25" Margin="0,10,0,10"
                    HorizontalContentAlignment="Center"
                    FontFamily="Snap ITC"
                    FontWeight="Bold"
                    Foreground="#FF974E4E"/>


            <ListView x:Name="CartItems" Grid.Column="0" Background="Azure" HorizontalAlignment="Center" Height="430" VerticalAlignment="Top"  Width="780">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"  MaxHeight="200" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="Azure" Orientation="Horizontal" VerticalAlignment="Stretch">
                            <Button x:Name="Delete" Grid.Row="0" Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}" Height="50" Width="50">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Carts/delete.png"/>
                                </Button.Background>
                            </Button>
                            <Image Source="{Binding Path}" HorizontalAlignment="Center" Width="120" Height="120" VerticalAlignment="Top" />
                            <TextBlock Text="{Binding Name}"></TextBlock>
                            <TextBlock Text="{Binding Price}" FontSize="20"></TextBlock>
                            <TextBlock Text="{Binding Amount}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </Grid>
</Page>
